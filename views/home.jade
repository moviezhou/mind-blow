extends layout

block content
  #wrapper
    #logo
        img(src='/images/logo.png')
    #display
        h1= title
        #login
            form(method='post')
                #slogan
                    p Enter your name if you want to be a mind-blower
                #login-form
                    .item
                        label Username
                        input(type='text', name='username')
                    .item
                        label Password
                        input(type='password', name='password')
                    .submit-btn
                        label &nbsp;
                        input(type='submit', value='Log In')
    include footer